<div class="jumbotron">
<%= simple_form_for @admin_post do |f| %>
  <%= f.input :publish, as: :select %>
  <%= f.select :complete, Post.complete.options,{} %>
  <%= f.label :country_classification %>  
  <%= f.select :country_classification, Post.country_classification.options,{} %>

  <%= f.label :classification %>  
  <%= f.select :classification, Post.classification.options,{} %>

  <%= f.input :publish_date %>
  <%= f.input :title, 
  input_html: {class: 'form-control'} %>
  <%= f.input :content,
  input_html: {rows: 7,class: 'form-control'} %>
  <%= f.input :note,
  input_html: {class: 'form-control'} %>
  <%= f.input :source,
  input_html: {class: 'form-control'},placeholder: '有猴子會幫你縮好網址，請直接貼上網址就好，不要使用其他縮網址服務喔！' %>
  <%= f.button :submit, class: "btn-primary" %>
  <%= link_to "返回文章列表", posts_path, class: "btn btn-default"  %>
<% end %>
</div>
