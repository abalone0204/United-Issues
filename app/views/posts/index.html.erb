<div>
  <%= link_to "新增文章", new_post_path(), class:"btn btn-info" %>
</div>
<div class="panel panel-default posts">
  <div class="panel-heading">
    所有文章列表
  </div>

  <table class="striped-table table">
    <thead>
      <th class="col-md-3">標題</th>
      <th>譯者</th>
      <th>內容</th>
      <th class="col-md-2"></th>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
      <tr>
        <td><%= link_to post.title, post_path(post) %></td>
        <td><%= post.user.name %></td>
        <td>
          <%= truncate(post.content, length: 14) %>
        </td>
        <td>
          <% if post.user == current_user %>
            <%= link_to "編輯", edit_post_path(post) %> |
            <%= link_to "刪除", post_path(post), method: :delete %>  
          <% end %>
        </td>
        <td></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>