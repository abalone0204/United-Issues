<div class="jumbotron">
<%= simple_form_for @admin_post do |f| %>
  <%= f.input :publish, as: :select %>
  <%= f.label :country_classification %>  
  <%= f.select :country_classification, Post.country_classification.options,{}, {class: "form-control shadow"} %>
  <%= f.input :publish_date %>
  <%= f.input :title, 
  input_html: {class: 'form-control'} %>
  <%= f.input :tag_list, input_html: { class: 'form-control'} %>
  <%= f.input :content,
  input_html: {rows: 7,class: 'form-control'} %>
  <%= f.input :note,
  input_html: {class: 'form-control'} %>
  <%= f.input :source,
  input_html: {class: 'form-control'} %>
  <%= f.button :submit, class: "btn-primary" %>
  <%= link_to "返回文章列表", posts_path, class: "btn btn-default"  %>
<% end %>
</div>
