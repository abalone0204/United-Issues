<h1>所有文章列表</h1>
<div>
  <%= link_to "新增文章", new_post_path() %>
</div>

<table>
  <thead>
    <th>標題</th>
    <th>內容</th>
    <th></th>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
    <tr> 
      <td><%= link_to post.title, post_path(post) %></td>
      <td>
        <%= truncate(post.content, length: 14) %>
      </td>
      <td>
        <%= link_to "編輯", edit_post_path(post) %> |
        <%= link_to "刪除", post_path(post), method: :delete %>
      </td>
      <td></td>
    </tr>
    <% end %>
  </tbody>
</table>
  


  
