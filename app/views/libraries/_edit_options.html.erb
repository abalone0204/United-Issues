<div class="dropdown edit-options-container">
  <%= link_to '#', class: "dropdown-toggle" , :"data-toggle" => "dropdown" do %>
  <span class="glyphicon glyphicon-pencil"></span>
  <% end %>
  <ul class="dropdown-menu edit-options" role="menu">
    <li><%= link_to "檢視", library %></li>
    <% if can? :update, library %>
    <li><%= link_to t('common.edit'), edit_library_path(library) %></li>
    <li><%= link_to t('common.destroy'), library_path(library), method: :delete, data: { confirm: "Are you sure?" } %>  </li>
    <% end %>
  </ul>
</div>