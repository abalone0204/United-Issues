<div id="tags_cloud">
  <%= link_to tags_cloud(Tag.all), tag_path('1231') %>
</div>

<div>
  <%= link_to t('common.new'), new_post_path(), class:"btn btn-info" %>
</div>
<div class="panel panel-default posts">
  <div class="panel-heading">
    <%= t('attributes.posts') %>
  </div>

  <table class="striped-table table">
    <thead>
      <th class="col-md-3"><%= t('activerecord.attributes.post.title') %></th>
      <th>Tags</th>
      <th><%= t('activerecord.attributes.post.translator') %></th>
      <th><%= t('activerecord.attributes.post.content') %></th>
      <th class="col-md-2"></th>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
      <tr>
        <td><%= post.render_title %></td>
        <td><%= raw post.tags.map(&:name).map { |t| link_to t, tag_path(t) }.join(', ') %></td>
        <td><%= post.user.name %></td>
        <td>
          <%= truncate(post.content, length: 14) %>
        </td>
        <td>
          <% if post.user == current_user %>
            <%= link_to t('common.edit'), edit_post_path(post) %> |
            <%= link_to t('common.destroy'), post_path(post), method: :delete %>  
          <% end %>
        </td>
        <td></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>