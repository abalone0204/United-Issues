<div class="dropdown edit-options-container">
  <%= link_to '#', class: "dropdown-toggle" , :"data-toggle" => "dropdown" do %>
  <span class="glyphicon glyphicon-pencil"></span>
  <% end %>
  <ul class="dropdown-menu edit-options" role="menu">
    <li><%= link_to t('common.edit'), edit_post_path(post) %></li>
    <li><%= link_to t('common.destroy'), post_path(post), method: :delete, data: { confirm: "Are you sure?" } %>  </li>
  </ul>
</div>