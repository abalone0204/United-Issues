<div class="container row user">
  <div class="col-md-6 col-md-offset-3">
    <% if @user.avatar.present? %>
      <%= image_tag @user.avatar_url(:normal), class:"img-rounded img-responsive" %>
    <% end %>
    <%= simple_form_for @user, html: {multipart: true} do |f| %>
    <%= f.input :avatar %>
    <%= f.input :remote_avatar_url, label: "或是圖片網址" %>
    <%= f.input :name, class: "form-control" %>

    <%= f.button :submit, class: "btn-primary" %>
    <%= link_to "返回首頁", root_path, class: "btn btn-default"  %>
    <% end %>
  </div>
</div>